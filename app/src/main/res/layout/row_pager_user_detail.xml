<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="data"
            type="com.sdei.farmx.dataobject.User" />

        <variable
            name="handler"
            type="com.sdei.farmx.fragment.InputDetailFragment" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dimen_30"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.firstName + ` `+data.lastName}"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_30"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_24"
            app:textUserAddress="@{data}"
            android:visibility="@{handler.validAddress(data) ? View.VISIBLE : View.GONE}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@{data.username}"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_24" />

    </LinearLayout>

</layout>
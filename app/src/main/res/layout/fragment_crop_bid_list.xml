<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.sdei.farmx.R" />
        <import type="android.view.View"/>

        <variable
            name="data"
            type="com.sdei.farmx.dataobject.RecyclerBindingList" />

        <variable
            name="handler"
            type="com.sdei.farmx.fragment.CropBidListFragment" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/sort_ll"
            app:layout="@{R.layout.row_crop_bid}"
            app:onItemClickListener="@{handler}"
            app:recyclerLinearAdapter="@{data}"
            android:visibility="@{(data == null || data.itemsList == null || data.itemsList.size() == 0) ? View.GONE : View.VISIBLE}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_bid_for_crop"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_24"
            android:visibility="@{(data == null || data.itemsList == null || data.itemsList.size() == 0) ? View.VISIBLE : View.GONE}"/>

        <LinearLayout
            android:id="@+id/sort_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/crop_green"
            android:gravity="center"
            android:onClick="@{handler::onClick}"
            android:padding="@dimen/dimen_16">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_6"
                android:text="@string/sort_by"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_28"
                app:drawableStart="@{R.drawable.ic_sort_by}" />

        </LinearLayout>

    </RelativeLayout>

</layout>

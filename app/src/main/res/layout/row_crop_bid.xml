<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.sdei.farmx.R" />

        <import type="com.sdei.farmx.helper.utils.AppConstants" />

        <variable
            name="item"
            type="com.sdei.farmx.dataobject.CropBid" />

        <variable
            name="callback"
            type="com.sdei.farmx.callback.RecyclerCallback" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/detail_grey"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_26">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> callback.onItemClick(position)}"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.userObj.firstName+` `+item.userObj.lastName}"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dimen_28"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_6"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_22"
                        app:drawableStart="@{R.drawable.ic_date}"
                        app:prefix="@{``}"
                        app:requiredDateFormat="@{AppConstants.DATE_FORMAT.FORMAT_2}"
                        app:showDefaultValue="@{true}"
                        app:textDate="@{item.time}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:drawablePadding="@dimen/dimen_6"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_22"
                        app:drawableStart="@{R.drawable.ic_time}"
                        app:prefix="@{``}"
                        app:requiredDateFormat="@{AppConstants.DATE_FORMAT.FORMAT_4}"
                        app:showDefaultValue="@{true}"
                        app:textDate="@{item.time}" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="@dimen/dimen_200"
                android:layout_height="wrap_content"
                android:background="@drawable/white_shape_with_corner_8"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingTop="@dimen/dimen_12"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_26"
                app:backgroundTint="@color/crop_green"
                app:currencyText="@{item.amount}" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

    </LinearLayout>
</layout>
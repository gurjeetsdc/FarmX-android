<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.sdei.farmx.dataobject.CustomGalleryData"/>

        <variable
            name="callback"
            type="com.sdei.farmx.callback.RecyclerCallback"/>

        <variable
            name="position"
            type="Integer"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160"
            android:layout_marginStart="1px"
            android:layout_marginEnd="1px"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:onClick="@{() -> callback.onItemClick(position)}"
            app:setImageBitmap="@{item.id}"/>

        <CheckBox
            android:id="@+id/chkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:checked="@{item.checked}"
            android:onClick="@{() -> callback.onItemClick(position)}"
            android:padding="0dp" />

    </RelativeLayout>

</layout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.ArrayList" />

        <import type="java.lang.String" />

        <variable
            name="items"
            type="ArrayList&lt;String&gt;" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/amber_slider"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_10">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorHeight="0px"
                app:tabMode="scrollable"
                app:tabPaddingEnd="0px"
                app:tabPaddingStart="0px" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/amber_slider"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:padding="@dimen/dimen_10"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Brinjal - Big(10 Quintal): 1356.00  Brinjal - Big(10 Quintal): 1356.00  Brinjal - Big(10 Quintal): 1356.00"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_26"
            app:viewSelected="@{true}" />

    </RelativeLayout>

</layout>

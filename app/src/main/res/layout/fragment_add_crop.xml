<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.sdei.farmx.R" />
        <import type="com.sdei.farmx.helper.utils.AppConstants" />

        <variable
            name="data"
            type="com.sdei.farmx.dataobject.Crop" />

        <variable
            name="handler"
            type="android.view.View.OnClickListener" />

        <variable
            name="itemClickListener"
            type="com.sdei.farmx.callback.RecyclerMoreActionCallback" />

        <variable
            name="weightUnits"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="timePeriodArray"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="distanceUnits"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="categories"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="varieties"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="supplyAreas"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="states"
            type="java.util.ArrayList&lt;String&gt;" />

        <variable
            name="districts"
            type="java.util.ArrayList&lt;String&gt;" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/publish_tv"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dimen_20"
                android:paddingStart="@dimen/dimen_20"
                android:paddingTop="@dimen/dimen_10">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_til"
                    style="@style/gray_edittext_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/crop_name_with_example"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={data.name}"
                        android:textColor="@color/text_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dimen_24"
                        app:backgroundTint="@color/text_black" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/category_spinner"
                    style="@style/gray_spinner_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:focusableInTouchMode="true"
                    app:hint="@{@string/category}"
                    app:hintTextColor="@{R.color.text_black}"
                    app:layoutIndex="@{0}"
                    app:selectedItem="@{``}"
                    app:spinnerAdapter="@{categories}" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/variety_spinner"
                    style="@style/gray_spinner_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    app:hint="@{@string/variety}"
                    app:hintTextColor="@{R.color.text_black}"
                    app:layoutIndex="@{0}"
                    app:selectedItem="@{data.variety}"
                    app:spinnerAdapter="@{varieties}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.sdei.farmx.customview.MyTextInputLayout
                        android:id="@+id/quantity_til"
                        style="@style/gray_edittext_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".73">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/quantity_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/quantity"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="@={data.quantity}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_24"
                            app:backgroundTint="@color/text_black" />

                    </com.sdei.farmx.customview.MyTextInputLayout>

                    <Spinner
                        android:id="@+id/quantity_unit_spinner"
                        style="@style/gray_spinner_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".27"
                        app:defaultSpinnerAdapter="@{weightUnits}"
                        app:selectedItem="@{data.quantityUnit}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_18"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/ic_rupee_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/price_til"
                        style="@style/gray_edittext_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_6">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/price_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/offer_price"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:text="@={data.price}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_24"
                            app:backgroundTint="@color/text_black" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:text="@string/quality"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24" />

                    <RadioGroup
                        android:id="@+id/quality_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/quality_a_plus_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:checked="@{data.grade.equals(@string/quality_a_plus)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/quality_a_plus"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/quality_a_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_6"
                            android:checked="@{data.grade.equals(@string/quality_a)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/quality_a"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/quality_b_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_6"
                            android:checked="@{data.grade.equals(@string/quality_b)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/quality_b"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/quality_c_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_6"
                            android:checked="@{data.grade.equals(@string/quality_c)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/quality_c"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/quality_d_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_6"
                            android:checked="@{data.grade.equals(@string/quality_d)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/quality_d"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                    </RadioGroup>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/address_til"
                    style="@style/gray_edittext_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/address_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={data.address}"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24"
                        app:backgroundTint="@color/text_black" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/city_til"
                    style="@style/gray_edittext_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/city_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city_village"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={data.city}"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24"
                        app:backgroundTint="@color/text_black" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/state_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/state_spinner"
                        style="@style/gray_spinner_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="@{@string/state}"
                        app:hintTextColor="@{R.color.text_black}"
                        app:layoutIndex="@{0}"
                        app:selectedItem="@{data.state}"
                        app:spinnerAdapter="@{states}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/districts_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/district_spinner"
                        style="@style/gray_spinner_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="@{@string/district}"
                        app:hintTextColor="@{R.color.text_black}"
                        app:layoutIndex="@{0}"
                        app:selectedItem="@{data.district}"
                        app:spinnerAdapter="@{districts}" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pincode_til"
                    style="@style/gray_edittext_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/pincode_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="3"
                        android:hint="@string/pin_code"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="@={data.pincode}"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24"
                        app:backgroundTint="@color/text_black" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/availability_date_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6"
                    android:layout_marginTop="@dimen/dimen_28"
                    android:gravity="bottom"
                    android:onClick="@{handler::onClick}"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_14"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/ic_calender" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/availability_date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:layout_marginStart="@dimen/dimen_8"
                            android:hint="@string/available_from"
                            android:paddingBottom="@dimen/dimen_10"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/text_black"
                            android:textSize="@dimen/dimen_24"
                            app:requiredDateFormat="@{AppConstants.DATE_FORMAT.FORMAT_2}"
                            app:textDate="@{data.availableFromObj.formatted}"
                            app:showDefaultValue="@{false}"
                            app:prefix="@{``}"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginEnd="@dimen/dimen_8"
                            android:layout_marginStart="@dimen/dimen_8"
                            android:background="@color/grey_light" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.sdei.farmx.customview.MyTextInputLayout
                        android:id="@+id/time_period_til"
                        style="@style/gray_edittext_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".73">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/time_period_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/availability_period"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="@={data.availablePeriod}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_24"
                            app:backgroundTint="@color/text_black" />

                    </com.sdei.farmx.customview.MyTextInputLayout>

                    <Spinner
                        android:id="@+id/time_period_spinner"
                        style="@style/gray_spinner_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".27"
                        app:defaultSpinnerAdapter="@{timePeriodArray}"
                        app:selectedItem="@{data.availableUnit}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_26"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:text="@string/supply_ability"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24" />

                    <RadioGroup
                        android:id="@+id/supply_availability_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/yes_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:checked="@{data.supplyAbility.equals(AppConstants.API_STRING_CONSTANTS.YES)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/yes"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/no_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:checked="@{data.supplyAbility.equals(AppConstants.API_STRING_CONSTANTS.NO)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/no"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/supply_area_spinner"
                        style="@style/gray_spinner_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".55"
                        app:enable="@{data.supplyAbility}"
                        app:requiredStatus="@{AppConstants.API_STRING_CONSTANTS.YES}"
                        app:hint="@{@string/supply_area}"
                        app:hintTextColor="@{R.color.text_black}"
                        app:layoutIndex="@{0}"
                        app:selectedItem="@{data.supplyArea}"
                        app:spinnerAdapter="@{supplyAreas}" />

                    <com.sdei.farmx.customview.MyTextInputLayout
                        android:id="@+id/distance_til"
                        style="@style/gray_edittext_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-3dp"
                        android:layout_weight=".45">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/distance_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/supply_range"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="@={data.supplyRange}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_24"
                            app:backgroundTint="@color/text_black"
                            app:enable="@{data.supplyAbility}"
                            app:requiredStatus="@{AppConstants.API_STRING_CONSTANTS.YES}"/>

                    </com.sdei.farmx.customview.MyTextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_22"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:text="@string/payment_preference"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24" />

                    <RadioGroup
                        android:id="@+id/payment_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/cod_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:checked="@{data.paymentPreference.equals(AppConstants.API_STRING_CONSTANTS.COD)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/cod"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/cheque_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:checked="@{data.paymentPreference.equals(AppConstants.API_STRING_CONSTANTS.CHEQUE)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/cheque"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/net_banking_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_6"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:checked="@{data.paymentPreference.equals(AppConstants.API_STRING_CONSTANTS.NET_BANKING)}"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="@string/net_banking"
                            android:textColor="@color/text_black"
                            app:buttonTintList="@{R.color.amber}" />

                    </RadioGroup>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/description_til"
                    style="@style/gray_edittext_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/description_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:hint="@string/description"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:lines="3"
                        android:maxLines="3"
                        android:text="@={data.description}"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimen_24"
                        app:backgroundTint="@color/text_black" />

                </android.support.design.widget.TextInputLayout>

                <!-- Image section-->

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/upload_image_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:background="@drawable/white_shape_with_corner_8"
                    android:onClick="@{handler::onClick}"
                    android:paddingBottom="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_12"
                    android:text="@string/upload_image"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_26"
                    app:backgroundTint="@color/amber" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/images_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_20"
                    app:columnNum="@{5}"
                    app:gridAdapter="@{data.imagesPath}"
                    app:itemClickListener="@{itemClickListener}"
                    app:layout="@{R.layout.row_add_grid_image}" />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/publish_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/crop_green"
            android:gravity="center"
            android:onClick="@{handler::onClick}"
            android:padding="@dimen/dimen_16"
            android:text="@string/publish_now"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_30" />

    </RelativeLayout>

</layout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.sdei.farmx.R" />
        <import type="com.sdei.farmx.helper.utils.AppConstants"/>

        <variable
            name="item"
            type="com.sdei.farmx.dataobject.Equipment" />

        <variable
            name="callback"
            type="com.sdei.farmx.fragment.EquipmentMyEquipmentsFragment" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> callback.onItemClick(position)}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_20">

            <com.sdei.farmx.customview.CircleImageView
                android:id="@+id/profile_iv"
                android:layout_width="@dimen/dimen_104"
                android:layout_height="@dimen/dimen_104"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_20"
                android:contentDescription="@string/app_name"
                app:loadImage="@{(item.images != null &amp;&amp; item.images.size() > 0) ? item.images.get(0) : ``}"
                app:placeholder="@{R.drawable.ic_place_holder_circular}"
                app:type="@{`equipments`}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@{item.name}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_22" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_6"
                            android:gravity="start|top"
                            android:lines="1"
                            android:text="@{item.categoryObj.name}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_20" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/dimen_20"
                        android:paddingStart="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:text="@{item.variety}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_22"
                            app:visibility="@{item.variety}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_22"
                            app:currencyTextWithPrefix="@{item.rate}"
                            app:prefix="@{``}"
                            app:suffix="@{callback.getPriceUnitForRentedItem(item)}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:text="@{@string/quantity+`: `+item.quantity}"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimen_22" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bids_ll"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rectangle_stroke_rounded"
                        android:gravity="center"
                        android:onClick="@{() -> callback.itemAction(AppConstants.RECYCLER_ACTION.BIDS, position)}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_2"
                        android:paddingTop="@dimen/dimen_2"
                        android:visibility="gone"
                        app:colorFilter="@{@color/amber}">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="@string/bids"
                            android:textColor="@color/amber"
                            android:textSize="@dimen/dimen_24"
                            app:drawableStart="@{R.drawable.ic_bids}" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_ll"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:background="@drawable/shape_rectangle_stroke_rounded"
                        android:gravity="center"
                        android:onClick="@{() -> callback.itemAction(AppConstants.RECYCLER_ACTION.EDIT, position)}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_2"
                        android:paddingTop="@dimen/dimen_2"
                        app:colorFilter="@{@color/crop_green}">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="@string/edit"
                            android:textColor="@color/crop_green"
                            android:textSize="@dimen/dimen_24"
                            app:drawableStart="@{R.drawable.ic_edit}" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delete_ll"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:background="@drawable/shape_rectangle_stroke_rounded"
                        android:gravity="center"
                        android:onClick="@{() -> callback.itemAction(AppConstants.RECYCLER_ACTION.DELETE, position)}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_2"
                        android:paddingTop="@dimen/dimen_2"
                        app:colorFilter="@{@color/red}">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="@string/delete"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_24"
                            app:drawableStart="@{R.drawable.ic_delete}" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

    </LinearLayout>

</layout>